server {
  listen   80;
  server_name  127.0.0.1;

  access_log  <%= node[:nginx][:log_dir] %>/localhost.access.log;

  location / {
    root   /var/www/nginx-default;
    index  index.html index.htm;
  }

  location ~ ^/(assets)/  {
    root /path/to/public;
    gzip_static on; # to serve pre-gzipped version
    expires max;
    add_header Cache-Control public;
  }
}
